{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./server",
    "baseUrl": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "paths": {
      "*": [
        "../node_modules/*"
      ]
    }
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}